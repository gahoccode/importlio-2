# Importfolio Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Flask environment (development, production)
# For production: FLASK_ENV=production
FLASK_ENV=production

# Flask debug mode (0=disabled, 1=enabled)
# WARNING: MUST be 0 in production!
FLASK_DEBUG=0

# Flask secret key for sessions and security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# IMPORTANT: Change this to a secure random key
FLASK_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-SECRET-KEY

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port the application runs on inside the container
PORT=10000

# Host port to map to container port
HOST_PORT=8080

# Python output buffering (1=unbuffered, recommended for containers)
PYTHONUNBUFFERED=1